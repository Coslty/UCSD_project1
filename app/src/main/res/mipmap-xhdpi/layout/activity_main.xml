<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:layout_marginBottom="197dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp" />

    <Button
        android:id="@+id/btn_google_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoogleMap"
        android:layout_alignBaseline="@+id/btn_setting"
        android:layout_alignBottom="@+id/btn_setting"
        android:layout_toRightOf="@+id/btn_setting"
        android:layout_toEndOf="@+id/btn_setting"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp" />


    <EditText
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your possition"
        android:layout_marginBottom="82dp"
        android:layout_above="@+id/btn_setting"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your name"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_above="@+id/user_type"
        android:layout_alignLeft="@+id/btn_setting"
        android:layout_alignStart="@+id/btn_setting" />

    <Button
        android:id="@+id/btn_send_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_above="@+id/btn_setting"
        android:layout_alignRight="@+id/user_name"
        android:layout_alignEnd="@+id/user_name"
        android:layout_marginBottom="27dp" />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_above="@+id/user_name"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name" />

</RelativeLayout>